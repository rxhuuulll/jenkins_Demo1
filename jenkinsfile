pipeline {
    agent any

    environment {
        DOCKER_USERNAME = credentials('0e18589a-430b-4201-ba1f-b5c7e7562ab3') // Your Docker Hub credentials ID
        DOCKER_PASSWORD = credentials('0e18589a-430b-4201-ba1f-b5c7e7562ab3') // Your Docker Hub credentials ID
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/rxhuuulll/jenkins_Demo1.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh 'docker build -t rahulmk9/my-nginx-image:latest .'
                }
            }
        }

        stage('Login to Docker Hub') {
            steps {
                script {
                    sh 'echo "$DOCKER_PASSWORD" | docker login -u "$DOCKER_USERNAME" --password-stdin'
                }
            }
        }

        stage('Publish Docker Image') {
            steps {
                script {
                    sh 'docker push rahulmk9/my-nginx-image:latest'
                }
            }
        }
    }
}
